# Production Dockerfile for Symfony Backend

FROM php:8.3-apache

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libicu-dev \
    libzip-dev \
    libonig-dev \
    libpq-dev \
    && docker-php-ext-install intl zip pdo pdo_pgsql

# Enable Apache mod_rewrite for Symfony
RUN a2enmod rewrite

# Install Composer globally
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Set the working directory inside the container
WORKDIR /var/www/html

# Copy the current directory contents into the container
COPY . /var/www/html

# Set environment variable for production
ENV APP_ENV=prod

# Install PHP dependencies via Composer (without dev dependencies)
RUN composer install --no-dev --optimize-autoloader

# Clear and warm up cache for production
RUN php bin/console cache:clear --env=prod && \
    php bin/console cache:warmup --env=prod

# Expose port 80 for the Apache server
EXPOSE 80

# Set the entrypoint to start Apache in the foreground
CMD ["apache2-foreground"]
